{
  "manifest_version": 3,
  "name": "Random Wikipedia Article",
  "version": "1.0",
  "description": "Fetch a random Wikipedia article with introductory text and image",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://en.wikipedia.org/"
  ]
}